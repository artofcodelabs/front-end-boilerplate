{
  "private": true,
  "name": "front-end-boilerplate",
  "version": "0.0.3",
  "description": "Boilerplate code for a multi-static-page website powered by modern and fancy tools",
  "scripts": {
    "build": "webpack --mode=production --node-env=production -c webpack.prod.js --progress",
    "build-dev": "webpack -c webpack.dev.js --progress",
    "clear": "./bin/clear.sh",
    "eslint": "eslint src __tests__ ./*.js --fix",
    "lint-staged": "lint-staged",
    "start": "node dev/server.js --env=development",
    "serve": "node dev/server.js",
    "stylelint": "stylelint src/css --fix",
    "test": "npm run test-unit && npm run test-e2e",
    "test-unit": "jest",
    "pretest-e2e": "npm run build",
    "test-e2e": "testcafe firefox __tests__/js/e2e/*.js --app 'node dev/server.js --env=test'",
    "prepare": "husky install"
  },
  "author": "Zbigniew Humeniuk <hello@artofcode.co>",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@heroicons/react": "^2.0.16",
    "core-js": "^3.29.0",
    "immer": "^9.0.19",
    "loco-js-model": "^2.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router": "^6.8.2",
    "react-router-dom": "^6.8.2",
    "redux": "^4.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@tailwindcss/forms": "^0.5.3",
    "autoprefixer": "^10.4.13",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-testcafe": "^0.2.1",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "image-minimizer-webpack-plugin": "^3.8.1",
    "imagemin": "^8.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.1.2",
    "mini-css-extract-plugin": "^2.7.3",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.8.4",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "tailwindcss": "^3.2.7",
    "testcafe": "^2.4.0",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-middleware": "^6.0.1",
    "webpack-hot-middleware": "^2.25.3"
  }
}
