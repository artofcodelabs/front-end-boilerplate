{
  "private": true,
  "name": "front-end-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate code for a multi-static-page website powered by modern and fancy tools",
  "scripts": {
    "build": "webpack --mode=production --node-env=production -c webpack.prod.js --progress",
    "build-dev": "webpack -c webpack.dev.js --progress",
    "clear": "./bin/clear.sh",
    "eslint": "eslint src __tests__ ./*.js --fix",
    "lint-staged": "lint-staged",
    "start": "node dev/server.js --env=development",
    "serve": "node dev/server.js",
    "stylelint": "stylelint src/css --fix",
    "test": "npm run test-unit && npm run test-e2e",
    "test-unit": "jest",
    "pretest-e2e": "npm run build",
    "test-e2e": "testcafe firefox __tests__/js/e2e/*.js --app 'node dev/server.js --env=test'",
    "prepare": "husky install"
  },
  "author": "Zbigniew Humeniuk <hello@artofcode.co>",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.7",
    "@heroicons/react": "^2.0.13",
    "core-js": "^3.26.0",
    "immer": "^9.0.16",
    "loco-js-model": "^2.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "react-router": "^6.4.2",
    "react-router-dom": "^6.4.2",
    "redux": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@tailwindcss/forms": "^0.5.3",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-testcafe": "^0.2.1",
    "express": "^4.17.1",
    "husky": "^7.0.1",
    "image-minimizer-webpack-plugin": "^3.7.0",
    "imagemin": "^8.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^2.2.0",
    "postcss": "^8.4.20",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.3.2",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^3.2.4",
    "testcafe": "^2.1.0",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-middleware": "^5.0.0",
    "webpack-hot-middleware": "^2.25.0"
  }
}
